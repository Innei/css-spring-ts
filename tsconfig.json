{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./esm",
    "baseUrl": ".",
    "jsx": "react",
    "target": "ES2020",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": [
      "vitest/globals"
    ],
    "paths": {
      "~/*": [
        "*"
      ],
    }
  },
  "exclude": [
    "node_modules/*",
    "dist/**"
  ]
}